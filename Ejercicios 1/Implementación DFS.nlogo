;; Mecanismo de resolución DFS
;;
;; argumentos...
;;   inicio    - estado inicial
;;   objetivo  - estado final
;;   limite    - limite para profundidad limitada
;;   debug     - true / false, provoca que sea impresa la traza
;;
;; funciones...
;;   GML [estado]
;;     - Generador de movimientos legales, toma un estado y devuelve la lista
;;           de estados sucesores. Espera para cada estado [regla regla(estado)]
;;
;;   filtro-estado [estado]
;;     - dado un estado, elimina aquello no es necesario para GML
;;
;;   test-de-objetivo [estado objetivo]
;;     - comprueba si el estado actual es el objetivo
;;

globals[
 camino
]

to-report GML [estado]
  report (list (list "*3" (estado * 3))
               (list "+7" (estado + 7))
               (list "-2" (estado - 2)))
end

; Función para inicializar la variable global que almacenará el camino recorrido,
; llamar por primera vez a DFS-recursion y mostrar el resultado final
to DFS [inicio objetivo limite debug]
  set camino []
  let resultado DFS-recursion inicio objetivo limite 0 debug
  ifelse is-number? resultado [
    set camino fput (list inicio) camino
    show camino
  ][
  print "No se ha encontrado ningún camino desde el inicio al objetivo. Pruebe con un límite de profundidad mayor."
  ]
end

to-report DFS-recursion [actual objetivo limite profundidad debug]
  set profundidad (profundidad + 1)
  if profundidad <= limite [
      let movimientos (GML actual)
      if debug
      [print (word "Explorando... " actual ",\t  movimientos: " movimientos ",\t  profundidad: " profundidad)]
      foreach movimientos[
        let m ?
        let estado-en-bruto filtro-estado m
        ifelse test-de-objetivo estado-en-bruto objetivo[
          set camino fput m camino
          report estado-en-bruto
        ][
          let resultado (DFS-recursion estado-en-bruto objetivo limite profundidad debug)
          if test-de-objetivo resultado objetivo[
            set camino fput m camino
            report resultado
          ]
        ]
      ]
  ]
  report []

end


to-report filtro-estado [estado]
  ;;
  ;; dado un estado, este filtro elimina todo aquello que no es necesario para
  ;;    el GML
  ;;
  report (last estado)                   ;; en este caso no hace nada
end


to-report test-de-objetivo [estado objetivo]
  ;;
  ;; Comprueba si el estado actual es el objetivo buscado
  ;;
  report (estado = objetivo)          ;; la condición básica
end
